<div class="container">
    <div class="d-flex justify-content-between align-items-center py-3">
      <a class="btn btn-primary" href="/users/create" role="button">
        <i class="bi-plus-lg"></i> Buat Baru
      </a>
    </div>
    
    <div class="table-responsive mt-3">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Password</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((user, index) => { %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td class="w-25"><%= user.username %></td>
              <td><%= user.password %></td>
              <td>
                <div class="d-flex gap-2 text-nowrap">
                  <a class="btn btn-primary btn-sm" href="/users/<%= user.id %>/edit" role="button">
                    <i class="bi-pencil-fill"></i> Edit
                  </a>
      
                  <form action="/users/<%= user.id %>?_method=DELETE" method="post">
                    <button class="btn btn-danger btn-sm" type="submit">
                      <i class="bi-trash-fill"></i> Hapus
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
  </div>
</div>